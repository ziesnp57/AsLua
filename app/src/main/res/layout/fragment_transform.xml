<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:tools="http://schemas.android.com/tools"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_width="match_parent"        android:layout_height="match_parent"        tools:context=".ui.transform.TransformFragment">    <androidx.appcompat.widget.SearchView            android:id="@+id/searchView_jk"            android:layout_width="match_parent"            android:layout_height="48dp"            app:queryHint="请输入关键字"            app:queryBackground="@color/whited"            android:focusable="false"            android:focusableInTouchMode="false"            app:layout_constraintTop_toTopOf="parent" />    <com.google.android.material.tabs.TabLayout            android:id="@+id/tab_td"            android:layout_width="match_parent"            app:tabGravity="start"            android:layout_height="48dp"            app:tabMode="scrollable"            android:animateLayoutChanges="true"            app:tabInlineLabel="false"            app:tabIndicatorFullWidth="false"            app:layout_constraintTop_toBottomOf="@+id/searchView_jk"            tools:ignore="SpeakableTextPresentCheck" />    <com.google.android.material.tabs.TabLayout            android:id="@+id/tab_tm"            android:layout_width="match_parent"            android:layout_height="35dp"            app:tabMode="scrollable"            android:animateLayoutChanges="true"            app:tabIndicatorHeight="0dp"            app:layout_constraintTop_toBottomOf="@+id/tab_td"            tools:ignore="SpeakableTextPresentCheck" />    <androidx.recyclerview.widget.RecyclerView            android:id="@+id/recyclerview_transform"            android:layout_width="match_parent"            android:layout_height="0dp"            app:layoutManager="GridLayoutManager"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintTop_toBottomOf="@+id/tab_tm" /></androidx.constraintlayout.widget.ConstraintLayout>