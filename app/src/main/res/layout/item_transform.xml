<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_height="match_parent">



    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="158dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/materialCardView3"
            tools:layout_editor_absoluteX="10dp" >


    </com.google.android.material.card.MaterialCardView>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_item_transform"
            android:src="@drawable/avatar_11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="@+id/materialCardView3"
            app:layout_constraintStart_toStartOf="@+id/materialCardView3" />


    <TextView
            android:text="歪果桃"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9" />

    <TextView
            android:textSize="13sp"
            android:text="2023-05-05"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/image_view_item_transform"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView3" />

    <TextView
            android:text="代码教程"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/image_view_item_transform"
            app:layout_constraintTop_toTopOf="@+id/materialCardView3" />


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            app:srcCompat="@drawable/dianzhang"
            android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView3"
            app:layout_constraintEnd_toStartOf="@+id/textView10" />

    <TextView
            android:text="66"
            android:textSize="13sp"
            android:layout_width="20dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintEnd_toEndOf="@+id/materialCardView3"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView3" />


    <TextView
            android:textSize="14sp"
            android:text="欢迎来到我的教程，花钱买教训\n
"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/image_view_item_transform"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView10"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" />


</androidx.constraintlayout.widget.ConstraintLayout>